<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FutsAppXamarin.home"
             Title="HOME"
             BackgroundImageSource="background_default.xml"
             IconImageSource="home.xml"
            >
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <!--<StackLayout HorizontalOptions="Fill" VerticalOptions="Start" BackgroundColor="Aquamarine">
           
                <Label Text="ULTIMA PARTITA"
                       FontSize="30"
                   FontFamily="titoli.ttf#titoli"
                   TextColor="#ffff00"
                   HorizontalOptions="FillAndExpand"
                   HorizontalTextAlignment="Center" Margin="0,10,0,20"/>

                <Label x:Name="risultato" FontSize="35"  FontFamily="titoli.ttf#titoli"  HorizontalOptions="FillAndExpand"
                   HorizontalTextAlignment="Center"/>
            </StackLayout>-->
            <Grid HeightRequest="200">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="10"/>
                </Grid.RowDefinitions>

                <Image Source="campo.jpg" Aspect="AspectFill" Grid.RowSpan="5" />
                <Label Text="ULTIMA PARTITA"
                       FontSize="30"
                       Grid.Row="1"
                   FontFamily="titoli.ttf#titoli"
                   TextColor="#ffff00"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />

                <Label x:Name="risultato"  Text="" Grid.Row="2" Grid.RowSpan="2" FontSize="35" TextColor="#ffff00" FontFamily="titoli.ttf#titoli"  
                   HorizontalTextAlignment="Center"/>
            </Grid>
            <StackLayout Orientation="Vertical" VerticalOptions="Center">
                <Button Text="INSERISCI RISULTATO" Clicked="gestisci_click" x:Name="inserisci"
                        FontFamily="titoli.ttf#titoli"
                        TextColor="#07a4f3"
                        FontSize="18"
                        BorderColor="White"
                        BorderWidth="4"
                        CornerRadius="30"
                        BackgroundColor="#fdd017"
                        HorizontalOptions="FillAndExpand"
                        Margin="20,10,20,5"/>

                <Button Text="STORICO" Clicked="gestisci_click" x:Name="storico"
                        FontFamily="titoli.ttf#titoli"
                        TextColor="#07a4f3"
                        FontSize="18"
                        BorderColor="White"
                        BorderWidth="4"
                        CornerRadius="30"
                        BackgroundColor="#fdd017"
                        HorizontalOptions="FillAndExpand"
                        Margin="20,5"/>

                <Button Text="CLASSIFICHE" Clicked="gestisci_click" x:Name="classifiche"
                        FontFamily="titoli.ttf#titoli"
                        TextColor="#07a4f3"
                        FontSize="18"
                        BorderColor="White"
                        BorderWidth="4"
                        CornerRadius="30"
                        BackgroundColor="#fdd017"
                        HorizontalOptions="FillAndExpand"
                        Margin="20,5"/>

                <Button Text="NUOVA PARTITA" Clicked="gestisci_click" x:Name="nuova_partita"
                        FontFamily="titoli.ttf#titoli"
                        TextColor="#07a4f3"
                        FontSize="18"
                        BorderColor="White"
                        BorderWidth="4"
                        CornerRadius="30"
                        BackgroundColor="#fdd017"
                        HorizontalOptions="FillAndExpand"
                        Margin="20,5,20,10"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>