<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FutsAppXamarin.home"
             Title="HOME"
             IconImageSource="home.xml">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout HorizontalOptions="Fill" HeightRequest="150">
                <Image x:Name="campo"  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                <Label Text="ULTIMA PARTITA"
                   FontFamily="titoli.ttf#titoli"
                   FontSize="30"/>
            </StackLayout>
            
            <Button
                Text="INSERISCI RISULTATO" Clicked="gestisci_click" x:Name="inserisci"/>

            <Button
                Text="STORICO" Clicked="gestisci_click" x:Name="storico"/>

            <Button
                Text="CLASSIFICHE" Clicked="gestisci_click" x:Name="classifiche"/>

            <Button
                Text="NUOVA PARTITA" Clicked="gestisci_click" x:Name="nuova_partita"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>